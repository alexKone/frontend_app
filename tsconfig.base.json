{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@assets": ["./apps/front/src/assets"],
      "@azwaaji/front/ui-shared": ["libs/front/ui-shared/src/index.ts"],
      "@azwaaji/utils/storage": ["libs/utils/storage/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
